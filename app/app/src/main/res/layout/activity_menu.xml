<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="338dp"
        android:layout_height="195dp"
        android:layout_margin="10dp"
        android:layout_marginVertical="40dp"
        android:elevation="50dp"
        android:gravity="top"
        app:srcCompat="@drawable/group_93" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/baloo"
        android:gravity="center"
        android:padding="16dp"
        android:text="¡Bienvenido a la Clínica universitaria San Marcos!"
        android:textColor="#2260FF"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btncita"
            android:layout_width="329dp"
            android:layout_height="50dp"
            android:backgroundTint="#2260FF"
            android:elevation="8dp"
            android:fontFamily="@font/semi_bold"
            android:padding="10dp"
            android:text="Agendar Cita"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:translationZ="8dp" />





    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btncitaprogramadas"
            android:layout_width="329dp"
            android:layout_height="50dp"
            android:backgroundTint="#2260FF"
            android:elevation="8dp"
            android:fontFamily="@font/semi_bold"
            android:padding="10dp"
            android:text="Ver tus citas programadas"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:translationZ="8dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCancelarCita"
            android:layout_width="329dp"
            android:layout_height="50dp"
            android:backgroundTint="#2260FF"
            android:elevation="8dp"
            android:fontFamily="@font/semi_bold"
            android:padding="10dp"
            android:text="Cancelar cita médica"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:translationZ="8dp" />
    </LinearLayout>

</LinearLayout>