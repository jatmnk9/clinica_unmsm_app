<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <!-- Encabezado con fondo azul -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2260FF"
        android:orientation="horizontal"
        android:padding="30dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/semi_bold"
            android:gravity="center"
            android:text="Menú Principal"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Imagen decorativa (opcional) -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="343dp"
        android:layout_height="178dp"
        android:layout_margin="100dp"
        app:srcCompat="@drawable/group_93" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/baloo"
        android:gravity="center"
        android:padding="8dp"
        android:layout_marginTop="-80dp"
        android:shadowColor="#80000000"
        android:shadowDx="0"
        android:shadowDy="2"
        android:shadowRadius="3"
        android:text="¡Bienvenido, administrador!"
        android:textColor="#2260FF"
        android:textSize="23sp" />

    <!-- Botones con mismo estilo -->
    <Button
        android:id="@+id/btnVerCita"
        android:layout_width="329dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#2260FF"
        android:elevation="12dp"
        android:fontFamily="@font/semi_bold"
        android:padding="10dp"
        android:text="Ver citas confirmadas"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:translationZ="10dp"
        android:layout_marginTop="100dp" />

    <Button
        android:id="@+id/btnCancelarCita"
        android:layout_width="329dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#2260FF"
        android:elevation="12dp"
        android:fontFamily="@font/semi_bold"
        android:padding="10dp"
        android:text="Cancelar citas confirmadas"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:translationZ="10dp"
        android:layout_marginTop="15dp" />

</LinearLayout>
