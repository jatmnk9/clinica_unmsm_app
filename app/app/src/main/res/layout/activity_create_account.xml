<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:padding="16dp"
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:fontFamily="@font/extra_bold"
            android:text="Nuevo usuario"
            android:textAlignment="center"
            android:textColor="#2260FF"
            android:textColorLink="#2260FF"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.477"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="HardcodedText"
            tools:layout_editor_absoluteY="-1dp" />


        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/textView6"
            android:layout_width="327dp"
            android:layout_height="41dp"
            android:fontFamily="@font/semi_bold"
            android:text="Nombre"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="39dp"
            tools:layout_editor_absoluteY="155dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="329dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            tools:layout_editor_absoluteX="36dp"
            tools:layout_editor_absoluteY="197dp">

            <EditText
                android:id="@+id/spBloodType"
                style="@style/Widget.Material3.AutoCompleteTextView.OutlinedBox.Dense"
                android:layout_width="329dp"
                android:layout_height="45dp"
                android:background="#ECF1FF"
                android:ems="10"
                android:fontFamily="@font/light"
                android:hint="Juan"
                android:inputType="text"
                android:padding="13dp"
                android:textColor="#809CFF"
                android:textColorHint="#809CFF"
                android:textSize="20sp" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/textView7"
            android:layout_width="327dp"
            android:layout_height="41dp"
            android:fontFamily="@font/semi_bold"
            android:text="Apellido"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="39dp"
            tools:layout_editor_absoluteY="155dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="329dp"
            android:layout_height="42dp"
            app:cardCornerRadius="16dp"
            tools:layout_editor_absoluteX="36dp"
            tools:layout_editor_absoluteY="197dp">

            <EditText
                android:id="@+id/etLastName"
                style="@style/Widget.Material3.AutoCompleteTextView.OutlinedBox.Dense"
                android:layout_width="329dp"
                android:layout_height="45dp"
                android:background="#ECF1FF"
                android:ems="10"
                android:fontFamily="@font/light"
                android:hint="Alcachofa"
                android:inputType="text"
                android:padding="13dp"
                android:textColor="#809CFF"
                android:textColorHint="#809CFF"
                android:textSize="20sp" />
        </androidx.cardview.widget.CardView>


        <TextView

            android:layout_marginTop="10dp"
            android:id="@+id/textView8"
            android:layout_width="327dp"
            android:layout_height="41dp"
            android:fontFamily="@font/semi_bold"
            android:text="Estado actual"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="39dp"
            tools:layout_editor_absoluteY="155dp" />


        <androidx.cardview.widget.CardView
            android:layout_width="329dp"
            android:layout_height="42dp"
            app:cardCornerRadius="16dp"
            tools:layout_editor_absoluteX="36dp"
            tools:layout_editor_absoluteY="197dp">

            <Spinner
                android:id="@+id/tipodecuenta"
                android:layout_width="329dp"
                android:layout_height="45dp"
                android:background="#ECF1FF"
                android:ems="10"
                android:fontFamily="@font/light"
                android:inputType="textPassword"
                android:padding="13dp"
                android:textColor="#809CFF"
                android:textColorHint="#809CFF"
                android:textSize="20sp"
                android:entries="@array/user_types" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/textView9"
            android:layout_width="327dp"
            android:layout_height="41dp"
            android:fontFamily="@font/semi_bold"
            android:text="Correo"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="39dp"
            tools:layout_editor_absoluteY="155dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="329dp"
            android:layout_height="42dp"
            app:cardCornerRadius="16dp"
            tools:layout_editor_absoluteX="36dp"
            tools:layout_editor_absoluteY="197dp">

            <EditText
                android:id="@+id/etFirstName"
                style="@style/Widget.Material3.AutoCompleteTextView.OutlinedBox.Dense"
                android:layout_width="329dp"
                android:layout_height="45dp"
                android:background="#ECF1FF"
                android:ems="10"
                android:fontFamily="@font/light"
                android:hint="juan.alachofa@unmsm.edu.pe"
                android:inputType="textEmailAddress"
                android:padding="13dp"
                android:textColor="#809CFF"
                android:textColorHint="#809CFF"
                android:textSize="20sp" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/light"
            android:textColor="#2260FF"
            android:text="Si pertenece a la UNMSM, escribir correo institucional"
            tools:layout_editor_absoluteX="86dp"
            tools:layout_editor_absoluteY="500dp" />


        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/textView10"
            android:layout_width="327dp"
            android:layout_height="41dp"
            android:fontFamily="@font/semi_bold"
            android:text="Contraseña"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="39dp"
            tools:layout_editor_absoluteY="155dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="329dp"
            android:layout_height="42dp"
            app:cardCornerRadius="16dp"
            tools:layout_editor_absoluteX="36dp"
            tools:layout_editor_absoluteY="197dp">

            <EditText
                android:id="@+id/etCedula"
                style="@style/Widget.Material3.AutoCompleteTextView.OutlinedBox.Dense"
                android:layout_width="329dp"
                android:layout_height="45dp"
                android:background="#ECF1FF"
                android:ems="10"
                android:fontFamily="@font/light"
                android:hint="*"
                android:inputType="textPassword"
                android:padding="13dp"
                android:textColor="#809CFF"
                android:textColorHint="#809CFF"
                android:textSize="20sp" />
        </androidx.cardview.widget.CardView>


        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/textView11"
            android:layout_width="327dp"
            android:layout_height="41dp"
            android:fontFamily="@font/semi_bold"
            android:text="Código"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="39dp"
            tools:layout_editor_absoluteY="155dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="329dp"
            android:layout_height="42dp"
            app:cardCornerRadius="16dp"
            tools:layout_editor_absoluteX="36dp"
            tools:layout_editor_absoluteY="197dp">

            <EditText
                android:id="@+id/etCellphone"
                style="@style/Widget.Material3.AutoCompleteTextView.OutlinedBox.Dense"
                android:layout_width="329dp"
                android:layout_height="45dp"
                android:background="#ECF1FF"
                android:ems="10"
                android:fontFamily="@font/light"
                android:hint="987654321"
                android:inputType="number"
                android:padding="13dp"
                android:textColor="#809CFF"
                android:textColorHint="#809CFF"
                android:textSize="20sp" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/light"
            android:textColor="#2260FF"
            android:text="Si pertenece a la UNMSM, escribir su código"
            tools:layout_editor_absoluteX="86dp"
            tools:layout_editor_absoluteY="500dp" />



        <Button
            android:id="@+id/btnSave"
            android:layout_width="241dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#2260FF"
            android:fontFamily="@font/semi_bold"
            android:text="Regístrate"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textColorLink="#2260FF"
            android:textSize="24dp"
            android:textStyle="normal"
            app:cornerRadius="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="403dp" />

    </LinearLayout>
</ScrollView>