<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="351dp"
        android:layout_height="96dp"
        app:srcCompat="@drawable/group_93" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="120dp"
        android:layout_height="76dp"
        android:baselineAligned="false"
        android:fontFamily="@font/extra_bold"
        android:text="Bienvenido"
        android:textAlignment="center"
        android:textColor="#2260FF"
        android:textColorLink="#2260FF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.477"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText"
        tools:layout_editor_absoluteY="-1dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="325dp"
        android:layout_height="64dp"
        android:fontFamily="@font/light"
        android:text="Dedicamos a brindar atenciones de calidad con la noble misión de  cuidar la salud integral de nuestros pacientes desde hace 35 años."
        android:textAlignment="textStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.465"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="90dp" />


    <TextView
        android:id="@+id/textView4"
        android:layout_width="327dp"
        android:layout_height="41dp"
        android:fontFamily="@font/semi_bold"
        android:text="Correo electrónico"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="39dp"
        tools:layout_editor_absoluteY="155dp" />

    <androidx.cardview.widget.CardView
        android:layout_width="329dp"
        android:layout_height="48dp"
        app:cardCornerRadius="16dp"
        tools:layout_editor_absoluteX="36dp"
        tools:layout_editor_absoluteY="197dp">

        <EditText
            android:id="@+id/etUsername"
            style="@style/Widget.Material3.AutoCompleteTextView.OutlinedBox.Dense"
            android:layout_width="329dp"
            android:layout_height="45dp"
            android:background="#ECF1FF"
            android:ems="10"
            android:fontFamily="@font/light"
            android:hint="correo electrónico"
            android:inputType="textEmailAddress"
            android:padding="13dp"
            android:textColor="#809CFF"
            android:textColorHint="#809CFF"
            android:textSize="20sp" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="328dp"
        android:layout_height="44dp"
        android:fontFamily="@font/semi_bold"
        android:text="Contraseña"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="39dp"
        tools:layout_editor_absoluteY="248dp" />

    <androidx.cardview.widget.CardView
        android:layout_width="329dp"
        android:layout_height="45dp"
        app:cardCornerRadius="16dp"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="289dp">

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="340dp"
            android:layout_height="match_parent"
            android:background="#ECF1FF"
            android:ems="10"
            android:fontFamily="@font/light"
            android:hint="contraseña"
            android:inputType="textPassword"
            android:padding="13dp"
            android:textColor="#809CFF"
            android:textColorHint="#809CFF"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.cardview.widget.CardView>


    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="78dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/regular"
        android:letterSpacing="-0.01"
        android:text="Olvidé mi contraseña"
        android:textAllCaps="false"
        android:textColor="#2260FF"
        android:textSize="14sp"
        tools:layout_editor_absoluteX="225dp"
        tools:layout_editor_absoluteY="324dp" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="207dp"
        android:layout_height="78dp"
        android:backgroundTint="#2260FF"
        android:fontFamily="@font/semi_bold"
        android:text="Iniciar Sesión"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColorLink="#2260FF"
        android:textSize="24dp"
        android:textStyle="normal"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="403dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/light"
            android:text="¿No tienes una cuenta creada?"
            tools:layout_editor_absoluteX="86dp"
            tools:layout_editor_absoluteY="500dp" />

        <Button
            android:id="@+id/tvCreatePassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:fontFamily="@font/semi_bold"
            android:letterSpacing="-0.01"
            android:text="Registrate"
            android:textAllCaps="false"
            android:textColor="#2260FF"
            android:textSize="14sp"
            tools:layout_editor_absoluteX="248dp"
            tools:layout_editor_absoluteY="485dp" />
    </LinearLayout>


</LinearLayout>